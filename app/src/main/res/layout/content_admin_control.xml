<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AdminControl"
    tools:showIn="@layout/activity_admin_control">

    <Button
        android:id="@+id/CreateFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="createFolder"
        android:text="Create New Folder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/UploadPicture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="uploadPicture"
        android:text="Upload Picture File"
        app:layout_constraintEnd_toEndOf="@+id/CreateFolder"
        app:layout_constraintStart_toStartOf="@+id/CreateFolder"
        app:layout_constraintTop_toBottomOf="@+id/CreateFolder" />

    <Button
        android:id="@+id/UploadAudio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Upload Audio File"
        app:layout_constraintEnd_toEndOf="@+id/CreateFolder"
        app:layout_constraintStart_toStartOf="@+id/UploadPicture"
        app:layout_constraintTop_toBottomOf="@+id/UploadPicture" />

    <Button
        android:id="@+id/UploadDocument"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Upload Document File"
        app:layout_constraintEnd_toEndOf="@+id/UploadAudio"
        app:layout_constraintStart_toStartOf="@+id/UploadAudio"
        app:layout_constraintTop_toBottomOf="@+id/UploadAudio" />

    <Button
        android:id="@+id/UploadVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Upload Video File"
        app:layout_constraintEnd_toEndOf="@+id/UploadDocument"
        app:layout_constraintStart_toStartOf="@+id/UploadDocument"
        app:layout_constraintTop_toBottomOf="@+id/UploadDocument" />

</android.support.constraint.ConstraintLayout>