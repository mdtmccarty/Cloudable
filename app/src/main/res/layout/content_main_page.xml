<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainParent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainPageActivity"
    tools:showIn="@layout/app_bar_main_page">

    <ScrollView
        android:id="@+id/evilParent"
        android:layout_width="395dp"
        android:layout_height="659dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/webinarArchive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Webinar Archive"
                android:src="@drawable/webinar_archive"/>
                <!--tools:layout_editor_absoluteX="48dp"-->
                <!--tools:layout_editor_absoluteY="40dp"/>-->
                <!--tools:src="@drawable/webinar_archive"-->
                <!--tools:srcCompat="@drawable/webinar_archive" />-->

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:contentDescription="TODO"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="219dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.386"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="390dp"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>